<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.example.danielleonett.pocflipview.FlipView
                android:id="@+id/flipView1"
                android:layout_width="@dimen/ticker_digit_width"
                android:layout_height="@dimen/ticker_digit_height"
                android:layout_marginEnd="4dp"
                app:shadowCornerRadius="@dimen/ticker_digit_background_radius" />

            <com.example.danielleonett.pocflipview.FlipView
                android:id="@+id/flipView2"
                android:layout_width="@dimen/ticker_digit_width"
                android:layout_height="@dimen/ticker_digit_height"
                android:layout_marginEnd="4dp"
                app:shadowCornerRadius="@dimen/ticker_digit_background_radius" />

            <com.example.danielleonett.pocflipview.FlipView
                android:id="@+id/flipView3"
                android:layout_width="@dimen/ticker_digit_width"
                android:layout_height="@dimen/ticker_digit_height"
                app:shadowCornerRadius="@dimen/ticker_digit_background_radius" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnFlip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="Flip" />

</FrameLayout>